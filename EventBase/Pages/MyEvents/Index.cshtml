@page
@model EventBase.Pages.MyEvents.IndexModel

@{
    ViewData["Title"] = "Index";
}

@using Microsoft.AspNetCore.Identity
@using EventBase.Models


@inject UserManager<MyUser> UserManager

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Place
            </th>
            <th>
                Address
            </th>
            <th>
                Date
            </th>
            @if (User.IsInRole("Organizer"))
            {
                <th>
                    Attendees
                </th>
            }
            else
            {
                <th>
                    SpotsAvailable
                </th>
            }

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Event)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Place)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                @if (User.IsInRole("Organizer"))
                {
                    <td>
                        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapse" aria-expanded="false" aria-controls="collapse">
                            View Attendees
                        </button>
                        <div class="collapse" id="collapse">
                            <div class="card card-body">
                                @foreach (var att in item.Attendees)
                                {
                                <p>
                                    @att.UserName
                                </p>
                                }
                            </div>
                        </div>
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.SpotsAvailable)
                    </td>
                }

                <td>
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Organizer"))
{
    <div class="text-center">
        <a href="/Events/Create" class="btn btn-dark">Add Event</a>
    </div>
}